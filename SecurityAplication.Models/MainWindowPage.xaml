<Page x:Class="SecurityAplication.Models.MainWindowPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SecurityAplication.Models"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainWindowPage">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>


        <Frame x:Name="Main" Grid.ColumnSpan="3" Grid.RowSpan="3">

        </Frame>

        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1">
            <TextBlock Text="Что вы хотите сделать?" TextAlignment="Center" Margin="0 0 0 20"/>
            <Button Name="signInButton" Content="SignIn" Click="SignInButtonClick" Margin="0 0 0 10"/>
            <Button Name="signUpButton" Content="SingUp" Click="SignUpButtonClick"/>
        </StackPanel>

    </Grid>
</Page>
